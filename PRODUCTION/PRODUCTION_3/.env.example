# ==============================================
# OpenChance PRODUCTION_1 - Environment Variables
# ==============================================

# ==============================================
# DATABASE
# ==============================================
DATABASE_URL="postgresql://openchance:openchance_dev_password@localhost:5432/openchance_dev"

# ==============================================
# REDIS
# ==============================================
REDIS_URL="redis://localhost:6379"

# ==============================================
# MEILISEARCH
# ==============================================
MEILI_HOST="http://localhost:7700"
MEILI_MASTER_KEY="openchance_dev_master_key"

# ==============================================
# AUTHENTICATION (Clerk)
# ==============================================
# Get these from: https://dashboard.clerk.com
CLERK_SECRET_KEY="sk_test_your_clerk_secret_key_here"
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key_here"
CLERK_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# ==============================================
# PAYMENTS (Stripe)
# ==============================================
# Get these from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret_here"

# ==============================================
# EMAIL (Resend)
# ==============================================
# Get this from: https://resend.com/api-keys
RESEND_API_KEY="re_your_resend_api_key_here"
FROM_EMAIL="noreply@openchance.com"

# For local development, use MailHog instead:
# SMTP_HOST="localhost"
# SMTP_PORT="1025"
# SMTP_USER=""
# SMTP_PASS=""

# ==============================================
# FILE STORAGE (Cloudflare R2)
# ==============================================
# Get these from: https://dash.cloudflare.com
R2_ACCOUNT_ID="your_cloudflare_account_id"
R2_ACCESS_KEY_ID="your_r2_access_key_id"
R2_SECRET_ACCESS_KEY="your_r2_secret_access_key"
R2_BUCKET_NAME="openchance-dev"
R2_PUBLIC_URL="https://your-bucket.r2.dev"

# ==============================================
# AI (OpenAI)
# ==============================================
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your_openai_api_key_here"

# ==============================================
# APPLICATION
# ==============================================
NODE_ENV="development"
PORT="3000"
API_PORT="3001"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# Backend URL (for API calls)
BACKEND_URL="http://localhost:3001"

# ==============================================
# SECURITY
# ==============================================
# Generate a random string for JWT secret
JWT_SECRET="your_random_jwt_secret_here_min_32_characters"

# Session secret
SESSION_SECRET="your_random_session_secret_here_min_32_characters"

# ==============================================
# MONITORING (Optional)
# ==============================================
# Sentry DSN (for error tracking)
SENTRY_DSN=""

# PostHog API Key (for analytics)
POSTHOG_API_KEY=""
POSTHOG_HOST="https://app.posthog.com"

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_AI_MATCHING="true"
ENABLE_REAL_TIME_MESSAGING="true"
ENABLE_PAYMENTS="true"
ENABLE_EMAIL_NOTIFICATIONS="true"

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL="debug"  # debug, info, warn, error

